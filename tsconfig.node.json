{
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "target": "ES2015",
    "lib": [
      "ES5",
      "ES6",
      "dom",
      "ES2015",
      "ES2016",
      "ES2017",
      "dom.iterable",
      "esnext"
    ],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "__tests__",
    "eslint.config.js",
    ".prettier.js",
    "commitlint.config.js"
  ],
  "exclude": ["node_modules", "dist", "coverage", "docs", "examples", "build"]
}
